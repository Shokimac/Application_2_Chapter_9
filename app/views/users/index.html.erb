<div class="container">
    <div class="row">
        <div class="col-xs-3">
            <%= render 'shared/share', user: @user, book: @book, newbook: @newbook %>
        </div>
        <div class="col-xs-9">
            <h2>Users</h2>
            <table class="table table-hover table-inverse">
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Name</th>
                        <th colspan="3"></th>
                    </tr>
                    <% @users.each do |user| %>
                    <tr>
                        <td><%= attachment_image_tag user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg",size:'40x40' %>
                        </td>
                        <td> <%= user.name %> </td>
                        <td> <%= link_to "Show", user_path(user.id) %> </td>
                    </tr>
                    <% end %>
                </thead>
                <tbody>
                </tbody>
            </table>

        </div>