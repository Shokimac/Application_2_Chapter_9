<div class="container">
    <p id="notice">
        <%=  notice %>
        <!--サクセスメッセージの表示-->
    </p>

    <div id="error_explanation">
        <% if @newbook.errors.any? %>
        <%= render 'shared/bookerror', book: @newbook %>
    </div>

    <div class="row">
        <div class="col-xs-3">
            <%= render 'shared/share', user: @user, book: @book, newbook: @newbook %>
        </div>
        <div class="col-xs-9">
            <h2>Books</h2>
            <table class="table table-hover table-inverse">
                <thead>
                    <tr>
                        <th></th>
                        <th>Title</th>
                        <th>Opinion</th>
                        <th colspan="3"></th>
                    </tr>
                    <% @books.each do |book| %>
                    <tr>
                        <td>
                            <%= link_to user_path(book.user_id) do %>
                            <%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg"%>
                            <% end %>
                        </td>
                        <td>
                            <%= link_to book.title, book_path(book.id) %> </td>
                        <td> <%= book.body %>
                        </td>
                    </tr>
                    <% end %>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>

<% else %>
<div class="container">
    <div class="row">
        <div class="col-xs-3">
            <%= render 'shared/share', user: @user, book: @book, newbook: @newbook %>
        </div>
