<div class="container">
    <p id="notice">
        <%=  notice %>
        <!--サクセスメッセージの表示-->
    </p>
    <div class="row">
        <div class="col-xs-3">
            <%= render 'shared/share', user: @user, book: @book, newbook: @newbook %>
        </div>
        <div class="col-xs-9">
            <h2>Book detail</h2>
            <table class="table table-hover table-inverse">
                <thead>
                    <tr>
                        <th colspan="3"></th>
                    </tr>
                    <tr>
                        <td>
                            <%= link_to user_path(@book.user_id) do %>
                            <%= attachment_image_tag @book.user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg", size:'40x40' %><br>
                            <%= @book.user.name %>
                            <% end %>
                        </td>
                        <td> <%= @book.title %> </td>
                        <td> <%= @book.body %> </td>
                        <% if @book.user.id == current_user.id %>
                        <td> <%= link_to 'Edit', edit_book_path(@book.id),class:"btn-sm btn-success" %> </td>
                        <td> <%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？", class:"btn-sm btn-danger" %>
                        </td>
                        <% else %>
                        <td></td>
                        <td></td>
                        <% end %>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>