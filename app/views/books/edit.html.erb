<h1>Editing Book</h1>

<div id="error_explanation">
    <% if @book.errors.any? %>
    <%= render 'shared/bookerror', book: @book %>
    <% end %>
</div>

<%= form_for @book do |f| %>
<div class="field">
    <label for="title">Title</label><br>
    <%= f.text_area :title %>
</div>

<div class="field">
    <label for="body">Opinion</label><br>
    <%= f.text_area :body %>
</div>

<div class="actions">
    <%= f.submit "Update Book" %>
</div>

<%= link_to "Show", book_path %>
<%= link_to "Back", books_path %>


<% end %>