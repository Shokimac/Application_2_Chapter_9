<div class="container">
    <p id="notice">
        <%=  notice %>
        <!--サクセスメッセージの表示-->
    </p>
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <h1>Editing Book</h1>
            <div id="error_explanation">
                <% if @book.errors.any? %>
                <%= render 'shared/bookerror', book: @book %>
                <% end %>
            </div>

            <%= form_for @book do |f| %>
            <div class="field row">
                <label for="title">Title</label><br>
                <%= f.text_field :title, class:"col-xs-12" %>
            </div>

            <div class="field row">
                <label for="body">Opinion</label><br>
                <%= f.text_area :body, class:"col-xs-12" %>
            </div>

            <div class="actions row">
                <%= f.submit "Update Book", class:"btn btn-primary col-xs-12" %>
            </div>

            <%= link_to "Show", book_path %>
            |
            <%= link_to "Back", books_path %>
        </div>
    </div>
    <% end %>