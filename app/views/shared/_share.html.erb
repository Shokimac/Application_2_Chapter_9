<h2>User info</h2>

<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg"%>

<table class="table">
    <tbody>
        <tr>
            <th>name</th>
            <th><%= user.name %></th>
        </tr>
        <tr>
            <th>introduction</th>
            <th><%= user.introduction %></th>
        </tr>
    </tbody>
</table>
<div class="row">
<% if @user.id == current_user.id %>
<%= link_to "", edit_user_path(user.id),class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
<% else %>
<%= link_to "", user_path(current_user.id),class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
<% end %>
</div>

<%= form_for newbook,:url => {controller: "books", action: "create"} do |f| %>
<h2 class="middle_title">New book</h2>
<div class="field row">
    <label for="">Title</label><br>
    <%= f.text_field :title, class:"col-xs-12" %>
</div>
<div class="field row">
    <label for="">Opinion</label><br>
    <%= f.text_area :body,class:"col-xs-12" %>
</div>
<%= f.submit "Create Book", class:"btn btn-primary col-xs-12"%>
<% end %>
